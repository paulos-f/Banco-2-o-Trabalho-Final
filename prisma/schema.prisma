generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model cliente {
  cod_cliente   Int       @id @default @unique
  cpf           String    @default @unique
  nome          String    @default
  sexo          String
  dt_nascimento DateTime  @default
  num_contato   String    @default
  email         String
  endereco      String
}

model modelo{
  cod_modelo  Int @id @default @unique
  nm_modelo   String @default
}

model marca{
  cod_marca   Int @id @default @unique
  cod_modelo  Int @default @unique
}

model dispositivo{
  cod_dispositivo Int @id @default @unique
  cod_modelo      Int @default @unique
  cod_cliente     Int @default @unique
}

model plano{
  cod_plano     Int @id @default @unique
  desc_plano    String
  valor         Float @default
}

model seguro{
  cod_seguro    Int       @id @default @unique
  cod_cliente   Int       @default @unique
  dt_inicio     DateTime  @default
  dt_fim        DateTime  @default
  cod_plano     Int       @default @unique
}

model sinistro{
  cod_sinistro      Int     @id @default @unique
  cod_dispositivo   Int     @default @unique
  tp_sinistro       String  @default
  dt_sinistro       String  @default
}

model tipo_sinistro{
  tp_sinistro Int @id @default @unique
  desc_avaliacao  String @default
}


