generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model cliente {
  cod_cliente   Int       @id  @unique
  cpf           String    @unique
  nome          String    
  sexo          String
  dt_nascimento DateTime  
  num_contato   String    
  email         String
  endereco      String
}

model modelo{
  cod_modelo  Int @id  @unique
  nm_modelo   String 
}

model marca{
  cod_marca   Int @id  @unique
  cod_modelo  Int @unique
}

model dispositivo{
  cod_dispositivo Int @id  @unique
  cod_modelo      Int  @unique
  cod_cliente     Int  @unique
}

model plano{
  cod_plano     Int @id  @unique
  desc_plano    String
  valor         Float 
}

model seguro{
  cod_seguro    Int       @id  @unique
  cod_cliente   Int        @unique
  dt_inicio     DateTime  
  dt_fim        DateTime  
  cod_plano     Int        @unique
}

model sinistro{
  cod_sinistro      Int     @id  @unique
  cod_dispositivo   Int      @unique
  tp_sinistro       String  
  dt_sinistro       String  
}

model tipo_sinistro{
  tp_sinistro Int @id  @unique
  desc_avaliacao  String 
}


